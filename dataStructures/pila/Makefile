# Compilador y flags
CC = gcc
CFLAGS = -Wall -Wextra -Iinclude

# Archivos fuente
SRC = tests/test_header.c
TARGET = test_header

# Regla por defecto
all: $(TARGET)

# CompilaciÃ³n
$(TARGET): $(SRC)
	@echo "ðŸ”§ Compilando archivo de test: $(SRC)"
	$(CC) $(CFLAGS) $(SRC) -o $(TARGET)

# Ejecuta los tests despuÃ©s de compilar
run: $(TARGET)
	@echo "ðŸš€ Ejecutando pruebas..."
	./$(TARGET)

# Limpieza de ejecutable
clean:
	@echo "ðŸ§¹ Limpiando archivos generados..."
	rm -f $(TARGET)
